# Database (REQUIRED)
DATABASE_URL="postgresql://user:password@localhost:5432/visualex_platform"

# JWT (REQUIRED - generate with: openssl rand -base64 32)
JWT_SECRET="CHANGE_ME_generate_with_openssl_rand_base64_32"
